{
    //^VSCodium
    "window.restoreFullscreen": true,
    "window.newWindowDimensions": "fullscreen",
    //$VSCodium

    //^Vim
    "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { 
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ]
  //$Vim
}
