---
  - name: Backing up Kali Linux...
    hosts: localhost
    roles:
      #Configurations
      - roles/backup/configurations/kde-desktop
      - roles/backup/configurations/tmux
      - roles/backup/configurations/zsh
      - roles/backup/configurations/vim
      - roles/backup/configurations/sudo
      #Applications
    become: true

  - name: 
    hosts: localhost
    tasks:
      - name: Backing up 'kali-build' to USB...
        shell: cp -r /home/ominousshell/kali-build/ /media/backup
      - name: Backing up 'kali-build' to Github...
        shell: |
          git config --global user.email "ominousshellotto@proton.me"
          git add .
          git commit -m "1.0" 
          git push
        args:
          chdir: /home/ominousshell/kali-build/
